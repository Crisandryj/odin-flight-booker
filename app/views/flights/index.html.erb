<%= form_with model: @flight, method: :get do |f| %>
 <%= f.label :departure_airport %>
 <%= f.select(:departure_airport, @airports) %>

 <%= f.label :arrival_airport %>
 <%= f.select(:arrival_airport, @airports) %>

 <%= f.label :departure_Time %>
 <%= f.select :start_date_time, @dates %>

 <%= f.label :number_of_passengers %>
 <%= f.select(:number_of_passengers,(1..4)) %>


 <%= f.submit %>

<% end %>
