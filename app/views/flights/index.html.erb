<%= render :partial => "search_form"%>
<%=form_with url: new_booking_path(:arrival_airport => params[:arrival_airport] ), method: :get do |f| %>

<%= f.hidden_field :passengers, :value => @passengers %>
<%= f.hidden_field :arrival_airport, :value => params[:arrival_airport] %>
<%= f.hidden_field :departure_time, :value => params[:departure_time] %>

<%= f.label :departure_airport %>
<%= f.collection_check_boxes :flight_id, @searched_flights, :id, :departure_airport_id %>

 <%= f.submit %>
<% end %>
